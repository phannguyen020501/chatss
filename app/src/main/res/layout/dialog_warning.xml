<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_4sdp">

        <ImageView
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:src="@drawable/ic_warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Security warning"
            android:layout_gravity="center_vertical"
            android:textColor="@color/error"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:text="This action may cause loss of data security. To make sure the person making this account is the owner, please enter your password:"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:paddingStart="@dimen/_16sdp"
        android:background="@drawable/background_input">
        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:hint="Your password"
            android:textSize="@dimen/_14ssp"
            android:background="@color/input_background"
            />
        <ImageButton
            android:id="@+id/btn_showpass"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:hint="Your password"
            android:textSize="@dimen/_14ssp"
            android:backgroundTint="@color/input_background"
            android:src="@drawable/ic_eye"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_4sdp">

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:backgroundTint="@color/red"
            android:textSize="@dimen/_10ssp"
            android:text="Cancel"
            />
        <Button
            android:id="@+id/btn_OK"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_10ssp"
            android:text="OK"
            />

    </LinearLayout>


</LinearLayout>